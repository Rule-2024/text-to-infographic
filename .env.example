# 数据库配置 - Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# 应用配置
NEXT_PUBLIC_SITE_URL=https://texttoinfographic.online
NODE_ENV=production

# AI API设置 - 腾讯云DeepSeek API
AI_API_KEY=your_tencent_cloud_api_key_here
AI_API_URL=https://api.lkeap.cloud.tencent.com/v1/chat/completions
AI_API_MODEL=deepseek-chat  # 可选值: deepseek-v3-0324, deepseek-v3, deepseek-r1

# 服务选择
# 设置为 true 使用模拟服务（开发测试用），设置为 false 使用真实 AI 服务
USE_MOCK_SERVICE=false